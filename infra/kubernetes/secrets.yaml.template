# Template for Kubernetes Secrets
# Copy this file to secrets.yaml and fill in actual values
# DO NOT commit secrets.yaml to git - add it to .gitignore
# 
# Usage: kubectl create secret generic investiq-secrets \
#   --from-literal=DATABASE_USER=investiq \
#   --from-literal=DATABASE_PASSWORD=<secure-password> \
#   --from-literal=DATABASE_URL=postgresql://investiq:<secure-password>@postgres.investiq.svc.cluster.local:5432/investiq_db \
#   --from-literal=gemini-api-key=<your-key> \
#   --from-literal=smtp-host=<host> \
#   --from-literal=smtp-port=587 \
#   --from-literal=smtp-username=<user> \
#   --from-literal=smtp-password=<pass> \
#   --from-literal=email-from=noreply@investiq.com \
#   --namespace=investiq
#
# IMPORTANT: Make sure DATABASE_PASSWORD matches the password in DATABASE_URL!

apiVersion: v1
kind: Secret
metadata:
  name: investiq-secrets
  namespace: investiq
  labels:
    app: investiq
type: Opaque
stringData:
  # Gemini API (Required for LLM Service)
  # Get your API key from: https://makersuite.google.com/app/apikey
  GEMINI_API_KEY: "your-gemini-api-key-here"
  
  # SMTP Configuration
  SMTP_HOST: "smtp.gmail.com"
  SMTP_PORT: "587"
  SMTP_USERNAME: "your-email@gmail.com"
  SMTP_PASSWORD: "your-app-password"
  EMAIL_FROM: "noreply@investiq.com"
  
  # Database Credentials
  # IMPORTANT: DATABASE_PASSWORD must match the password in DATABASE_URL!
  DATABASE_USER: "investiq"
  DATABASE_PASSWORD: "changeme"
  # Full database connection string (must match password above)
  DATABASE_URL: "postgresql://investiq:changeme@postgres.investiq.svc.cluster.local:5432/investiq_db"

